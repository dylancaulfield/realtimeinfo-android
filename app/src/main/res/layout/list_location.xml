<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="Leixlip Confey"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/list_location_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_location_name"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:text="DART, Intercity" />

    <TextView
        android:id="@+id/list_location_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:text="Dublin Bus" />

    <TextView
        android:id="@+id/list_location_stopid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_location_operator"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:text="3994" />

</RelativeLayout>